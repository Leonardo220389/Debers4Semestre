<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/edit/{{link.id}}" method="POST">
            <div class="form-group mb-3">
              <input
                type="text"
                value="{{link.title}}"
                name="title"
                class="form-control"
                placeholder="Title"
              />
            </div>
            <div class="form-group mb-3">
              <input
                type="url"
                value="{{link.url}}"
                name="url"
                class="form-control"
                placeholder="URL"
              />
            </div>
            <div class="form-group mb-3">
              <textarea
                name="description"
                class="form-control"
                placeholder="Description"
                rows="2"
              >{{link.description}}</textarea>
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-success btn-block">save</button>
            </div>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>